<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pet Owner</th>
      <th>Breed</th>
      <th>Date of birth</th>
      <th>Histories Count</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= link_to pet.client, clients_path %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.date_of_birth %></td>
        <td><%= pet.histories_count %></td>
        <td><%= link_to 'History', client_pet_pet_histories_path(@client, pet) %></td>
        <td><%= link_to 'Show', [@client, pet] %></td>
        <td><%= link_to 'Edit', edit_client_pet_path(@client, pet) %></td>
        <td><%= link_to 'Destroy', [@client, pet], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

