<p id="notice"><%= notice %></p>

<h1>Pet Histories</h1>

<table>
  <thead>
    <tr>
      <th>Visit</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Description</th>
      <th>Pets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.visit %></td>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.height %></td>
        <td><%= pet_history.description %></td>
        <td><%= link_to pet_history.pet, client_pets_path(@client) %></td>
        <td><%= link_to 'Show', [@client, @pet, pet_history] %></td>
        <td><%= link_to 'Edit', edit_client_pet_pet_history_path(@client, @pet, pet_history) %></td>
        <td><%= link_to 'Destroy', [@client, @pet, pet_history], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

